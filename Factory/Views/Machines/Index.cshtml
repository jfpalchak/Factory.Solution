@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>

<h5>Factory > Machines</h5>
<hr/>
<br/>

<div class="row justify-content-around">
  <div class="col-3">

    <div class="links container">
      <h5>@Html.ActionLink("Add New Machine", "Create")</h5>
    </div>

  </div>
  <div class="col-5 list-display">

    <h2>Available Machines:</h2>

    @if (Model.Count == 0)
    {
      <p>There are currently no Machines in the system.</p>
    }
    else
    {
      @foreach (Machine machine in Model)
      {
        <h4><li>@Html.ActionLink(machine.Model, "Details", new { id = machine.MachineId })</li></h4>
      }
    }

  </div>
</div>