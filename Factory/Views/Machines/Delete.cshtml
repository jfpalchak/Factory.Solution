@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h5>Factory > Machines > @Model.Model > Remove</h5>
<hr/>

<h2>Are you sure you want to delete this Machine's records?</h2>
<br/>
<h4>@Html.DisplayNameFor(model => model.Model): @Html.DisplayFor(model => model.Model)</h4>
<br/>
@using(Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-danger" />
}

<br/>
<div class="links container">
  <h5>@Html.ActionLink("Back to Engineer", "Details", new { id = Model.MachineId })</h5>
</div>